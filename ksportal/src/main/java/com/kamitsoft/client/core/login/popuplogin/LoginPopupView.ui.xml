        <g:HTMLPanel>
            <g:Label ui:field = "loginmessage" styleName ="smalltextred"/>
            <g:HTMLPanel styleName = "margin-left-20px margin-top-10px"> 
                <g:Label ui:field = "username" styleName = "width35pc alignleft10"/> :
                <g:TextBox styleName = "  width30pc alignleft10 margin-left-130px" ui:field = "textFieldUsername" />
